<div class="container" style="margin-top: 80px">
	<% @category = ["abstract", "city", "people", "transport", "animals", "food", "nature", "business", "nightlife", "sports", "cats", "fashion", "technics"]%>
	<% @products.each do |product| %>
		<div class="row" style="margin-top: 20px">
			<div class="col-sm-2 col-sm-offset-3">
				<% if @category.length > 0 %>
					<img src= <%= Faker::LoremPixel.image("200x200", false, @category.first) %>>
					<%@category.shift %>
						
				<% else %>	
					<% @category = ["abstract", "city", "people", "transport", "animals", "food", "nature", "business", "nightlife", "sports", "cats", "fashion", "technics"]%>
					<img src= <%= Faker::LoremPixel.image("200x200", false, @category.first) %>>
					<%@category.shift %>
				<% end %>
			</div>
			<div class="col-sm-2 col-sm-offset-1">
				<h4><%=product.name%></h4>
				<h5><%=product.price%></h5>
				<%= form_tag "/products/add_to_cart" do%>
					<%= hidden_field_tag :product_id, product.id %>
					<%= submit_tag "Add to Cart" %>
				<% end %>
				<%= form_tag "/products/add_to_wishlist" do%>
					<%= hidden_field_tag :product_id, product.id %>
					<%= submit_tag "Add to Wishlist" %>
				<% end %>
			</div>
		</div>
	<%end%>
</div>
	

